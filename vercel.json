{
  "version": 2,
  "builds": [
    {
      "src": "netlify/functions/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "https://starken-financeiro-production-0684.up.railway.app/api/$1"
    },
    {
      "src": "/contas-pagar",
      "dest": "/pages/contas-pagar.html"
    },
    {
      "src": "/contas-receber",
      "dest": "/pages/contas-receber.html"
    },
    {
      "src": "/dre",
      "dest": "/pages/dre.html"
    },
    {
      "src": "/analiticos",
      "dest": "/pages/analiticos.html"
    },
    {
      "src": "/relatorios",
      "dest": "/pages/relatorios.html"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ]
}
